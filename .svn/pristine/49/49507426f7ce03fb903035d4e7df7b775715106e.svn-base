<div class="center">
  <%= form_for(@user) do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :email %>
    <%= f.text_field :email %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.label :password_confirmation, 'password confirmation' %>
    <%= f.password_field :password_confirmation %>

    <%= f.submit 'register', class: 'btn btn-large btn-primary' %>

  <% end %>
</div>